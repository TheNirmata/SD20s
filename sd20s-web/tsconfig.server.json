  "compilerOptions": {
    "target": "es2023",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/server/**/*.ts",
    
  ],
  "exclude": ["node_modules", ".next"]
}